<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_pair_time"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/pair_el_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10:40 - 12:10" />

    <TextView
        android:id="@+id/tv_pair_auditory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/pryaniki_color"
        android:textSize="@dimen/pair_el_text_size"
        app:layout_constraintEnd_toEndOf="@+id/tv_pair_time"
        app:layout_constraintStart_toStartOf="@+id/tv_pair_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_pair_time"
        tools:text="Пр1417" />

    <TextView
        android:id="@+id/tv_pair_subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/pair_el_text_size"
        app:layout_constraintEnd_toEndOf="@+id/tv_pair_auditory"
        app:layout_constraintStart_toStartOf="@+id/tv_pair_auditory"
        app:layout_constraintTop_toBottomOf="@+id/tv_pair_auditory"
        tools:text="Дискретная математика (Практика)" />

    <TextView
        android:id="@+id/tv_pair_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/pair_el_text_size"
        app:layout_constraintEnd_toEndOf="@+id/tv_pair_subject_name"
        app:layout_constraintStart_toStartOf="@+id/tv_pair_subject_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_pair_subject_name"
        tools:text="Норин Владимир Павлович" />

    <TextView
        android:id="@+id/tv_pair_date_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_pair_teacher_name"
        app:layout_constraintStart_toStartOf="@+id/tv_pair_teacher_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_pair_teacher_name"
        tools:text="2 Сен - 3 Ноя" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/color_gray_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pair_date_range" />

</androidx.constraintlayout.widget.ConstraintLayout>