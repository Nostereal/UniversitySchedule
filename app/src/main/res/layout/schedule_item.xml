<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="9:00 - 10:30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/timeTextView" android:textSize="20sp"
            android:textAlignment="center" android:textColor="@android:color/background_dark" android:textStyle="bold"
            android:layout_marginTop="5dp"/>
    <TextView
            android:text="Пр1212"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textSize="20sp" android:id="@+id/lectureHallTextView"
            android:paddingLeft="4dp" android:textColor="@color/lectureHall" android:textStyle="bold"
            android:textAllCaps="false"/>
    <TextView
            android:text="Деловая этика"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/subjectTextView" android:textSize="18sp"
            android:textColor="@android:color/background_dark" android:paddingLeft="4dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/teacherNameTextView" android:paddingLeft="4dp"
            android:textSize="14sp"/>
</LinearLayout>